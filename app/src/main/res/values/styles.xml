<?xml version="1.0" encoding="utf-8"?>


<resources>
    <style name="editText">
        <item name="android:layout_marginTop">10dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">#3C3939</item>

    </style>

    <style name="button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/register_button_background</item>
        <item name="android:hint">confirmar</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@null</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>

    </style>

    <style name="backButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:src">@drawable/baseline_arrow_back</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>

    </style>
    
</resources>